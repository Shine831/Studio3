
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingDoc() {
      return resource != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isTutorOwner(tutorProfileData) {
      return isOwner(tutorProfileData.userId);
    }

    function isFollowOrUnfollow() {
      // Check that only the followersCount field is being changed
      if (!request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followersCount'])) {
        return false;
      }
      // Check that the count is only changing by +1 or -1
      return request.resource.data.followersCount == resource.data.followersCount + 1
          || request.resource.data.followersCount == resource.data.followersCount - 1;
    }

    // --------------------------------------------------------------------
    // User Data Collections (/users)
    // --------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false; // Prevent user enumeration
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if (isOwner(userId) || isAdmin()) && isExistingDoc();
      
      match /studyPlans/{studyPlanId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.studentId == userId;
        allow update: if (isOwner(userId) || isAdmin()) && isExistingDoc();
        allow delete: if (isOwner(userId) || isAdmin()) && isExistingDoc();
      }

      match /quizResults/{quizResultId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.studentId == userId;
        allow update: if (isOwner(userId) || isAdmin()) && isExistingDoc();
        allow delete: if (isOwner(userId) || isAdmin()) && isExistingDoc();
      }

      match /notifications/{notificationId} {
        allow get, list, delete: if isOwner(userId);
        // Allow signed-in users (like tutors) to create notifications for other users.
        allow create: if isSignedIn();
        allow update: if false;
      }

      match /following/{tutorId} {
        allow read, write: if isOwner(userId);
      }

      match /bookings/{bookingId} {
        // A student can read their own booking.
        allow read: if isOwner(userId);
        // A student can write to their own booking, or the tutor of the booking can create/update it.
        allow write: if isOwner(userId) || isOwner(resource.data.tutorId) || isOwner(request.resource.data.tutorId);
      }
    }

    // --------------------------------------------------------------------
    // Public Content & Tutor Collections
    // --------------------------------------------------------------------

    match /subjects/{path=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /tutors/{tutorId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if (isTutorOwner(resource.data) || isAdmin() || (isSignedIn() && isFollowOrUnfollow())) && isExistingDoc();
      allow delete: if (isTutorOwner(resource.data) || isAdmin()) && isExistingDoc();

      match /ratings/{studentId} {
        allow get, list: if true;
        allow create: if isOwner(studentId)
                      && request.resource.data.studentId == studentId
                      && request.resource.data.tutorId == tutorId;
        allow update: if isOwner(studentId) && isExistingDoc();
        allow delete: if false;
      }

      match /followers/{studentId} {
        // GET: A tutor can see any follower doc, an admin can, and a student can see their own.
        allow get: if isOwner(tutorId) || isAdmin() || isOwner(studentId);
        
        // LIST: A tutor can list their followers, or an admin can.
        allow list: if isOwner(tutorId) || isAdmin();

        // WRITE: A student can add/remove their own follower record.
        allow write: if isOwner(studentId);
      }

      match /bookings/{bookingId} {
        allow read, write: if isOwner(tutorId) || isOwner(resource.data.studentId);
      }
    }

    // --------------------------------------------------------------------
    // Administrative Collections
    // --------------------------------------------------------------------

    match /roles_admin/{userId} {
      allow get, list, create, update, delete: if isAdmin();
    }
    
    match /bug_reports/{reportId} {
      allow create: if isSignedIn();
      allow read, update, delete: if false;
    }
  }
}
